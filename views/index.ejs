<!-- index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>NutriAI - AI Nutrition Advisor</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>
        <i class="fas fa-robot"></i>
        NutriAI
      </h1>
      <p class="tagline">Your Intelligent Nutrition Assistant</p>
      <div class="ai-badge">Powered by AI</div>
    </div>

    <form action="/ask" method="POST">
      <div class="input-group">
        <textarea 
          name="question" 
          id="question" 
          placeholder="Ask me anything about nutrition... (e.g., 'What's a healthy meal plan for weight loss?')"
          required></textarea>
      </div>
      <button type="submit">
        <i class="fas fa-comment-medical"></i>
        Get AI Advice
      </button>
    </form>

    <div class="loading">
      <i class="fas fa-spinner fa-spin"></i>
      Analyzing your question...
    </div>

    <!-- Response will be inserted here -->
  </div>
  <script>
    const form = document.querySelector("form");
    const loading = document.querySelector(".loading");

    form.addEventListener("submit", () => {
      loading.style.display = "block";
    });
  </script>
</body>
</html>